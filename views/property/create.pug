extends ../layout/index

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block content

    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-3xl.font-extrabold=page

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8(action="")
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información general
                    p.text-gray-600 Añade información sobre la propiedad en venta

                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.mt-3.font-bold(for="title") Título de anuncio
                        input#title.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Título de la propiedad, ej. Casa esquinera en Castilla" type="text" name="title")
                        
                        did(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                            div(class="md:w-1/2")
                                label.block.text-sm.uppercase.text-gray-600.mb-2.mt-3.font-bold(for="category") Categoría
                                select#category.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(name="category")
                                    option(value="") - Seleccione -
                                
                            div(class="md:w-1/2")
                                label.block.text-sm.uppercase.text-gray-600.mb-2.mt-3.font-bold(for="price") Precio
                                select#price.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(name="price") 
                                    option(value="") - Seleccione -
                        
                        did(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-600.mb-2.mt-3.font-bold(for="rooms") Habitaciones
                                select#rooms.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(name="rooms")
                                    option(value="") - Seleccione -
                                    - let r = 1;
                                        while r < 5
                                            option(value=r) #{r++}
                            
                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-600.mb-2.mt-3.font-bold(for="bathrooms") Baños
                                select#bathrooms.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(name="bathrooms") 
                                    option(value="") - Seleccione -
                                    - let b = 1;
                                        while b < 5
                                            option(value=b) #{b++}
                                    
                            div(class="md:w-1/3")
                                label.block.text-sm.uppercase.text-gray-600.mb-2.mt-3.font-bold(for="parking") Parqueadero
                                select#parking.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(name="parking") 
                                    option(value="") - Seleccione -
                                    - let p = 1;
                                        while p < 5
                                            option(value=p) #{p++}

                        div.border-gray-200.border-t.py-5.space-y-5
                            h3.text-lg.leading-6.font-medium.text-gray-900 Ubicación del Inmueble
                            p.text-gray-600 Ubica la ubicación en el mapa
                            #mapa.h-96

                            div
                                p.street

                            input(type="hidden", name="street" id="street")
                            input(type="hidden", name="lat" id="lat")
                            input(type="hidden", name="lng" id="lng")

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/map.js")
