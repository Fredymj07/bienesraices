extends ../layout/index

block content

    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-3xl.font-extrabold=page

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-3
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="user@mail.com" type="email" name="email")

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer" type="submit", value="Recordar Contraseña")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Iniciar sesión 
                        a.text-gray-500.text-xs(href="/auth/register") Crear cuenta