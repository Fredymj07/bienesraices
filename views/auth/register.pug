extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raíces
        h2.text-center.text-3xl.font-extrabold=page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold=error.msg

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-3(method="POST" action="/auth/register" noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="name") Nombre
                        input#name.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="Nombre" type="text" name="name" value=user ? user.name : "")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="email") Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(placeholder="user@mail.com" type="email" name="email" value=user ? user.email : "")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="password") Contraseña
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(type="password" name="password")
                    div
                        label.block.text-sm.uppercase.text-gray-600.mb-2.font-bold(for="repeat_password") Repetir contraseña
                        input#repeat_password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-300(type="password" name="repeat_password")

                    input(class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 cursor-pointer rounded" type="submit", value="Crear cuenta")

                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/login") Iniciar sesión 
                        a.text-gray-500.text-xs(href="/auth/forgot-password") Recordar contraseña